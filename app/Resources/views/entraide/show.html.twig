{% extends 'EntraideBundle:Default:index.html.twig' %}

{% block content %}

    <div class="portlet box red">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>entraide: {{ entraide.nom }}
            </div>
            <br>

            <div class="caption">
                    <i class="fa fa-pencil"></i>
                cr√©e par:             {% for c in creator %}
                {{ c.username }}
                {% endfor %}

            </div>

        </div>
        <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <div class="form-horizontal">
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-3 control-label">date </label>
                        <div class="col-md-4">
                            <span>{% if entraide.date %}{{ entraide.date|date('Y-m-d') }}{% endif %}</span>

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">image</label>
                        <div class="col-md-4">
                            <img src="{{ asset('images/'~ entraide.image~ '') }}" alt=""/>

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">total dons</label>
                        <div class="col-md-4">
                            {% for s in somme %}
                            {{ s[1]|number_format(3,'.',',') }} dinars
                            {% endfor %}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">description entraide</label>
                        <div class="col-md-4">
                            <span>{{ entraide.description }}</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">liste des dons</label>
                        <div class="col-md-4">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th> # </th>
                                        <th> montant </th>
                                        <th> description </th>
                                    </tr>
                                    </thead>

                                    <tbody>
                                    {% for liste in listes %}
                                        <tr>
                                            <td>
                                                {{ liste.id }}

                                            </td>
                                            <td>
                                                {{ liste.montant }}

                                            </td>
                                            <td>
                                                {{ liste.description }}

                                            </td>
                                        </tr>
                                    {% endfor %}

                                    </tbody>

                                </table>
                        </div>
                    </div>


                </div>



            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">


                            <a href="{{ path('entraide_index') }}" class="btn btn-circle red-sunglo ">
                                <i class="fa fa-hand-o-left"></i> Retour a la liste

                            </a>

                            <a href="{{ path('entraide_edit', { 'id': entraide.id }) }}" class="btn btn-circle red-sunglo ">
                                <i class="fa fa-edit"> Modifier
                                </i>

                            </a>
                            <a href="{{ path('entraide_delete', { 'id': entraide.id }) }}" class="btn btn-circle red-sunglo ">
                                <i class="fa fa-trash"> Supprimer
                                </i>

                            </a>

                    </div>
                </div>
            </div></div>

        <!-- END FORM-->
    </div>
    </div>



{% endblock %}
