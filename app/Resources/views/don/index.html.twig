{% extends 'EntraideBundle:Default:index.html.twig' %}

{% block content %}
    <h1>Dons list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Montant</th>
                <th>Description</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for don in dons %}
            <tr>
                <td><a href="{{ path('don_show', { 'id': don.id }) }}">{{ don.id }}</a></td>
                <td>{{ don.montant }}</td>
                <td>{{ don.description }}</td>
                <td>{% if don.date %}{{ don.date|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('don_show', { 'id': don.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('don_edit', { 'id': don.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('don_new') }}">Create a new don</a>
        </li>
    </ul>
{% endblock %}
