{% extends 'EventsBundle:Default:layout.html.twig' %}
{% block content %}
    {{ form_start(edit_form) }}
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>Ajout d'un agenda
            </div>
            <div class="actions">

                <a style="color: white" href="{{  path('agenda_index') }}">
                    <i class="fa fa-pencil">Liste des agenda</i>

                </a>


            </div>
        </div>
        <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <div class="form-horizontal">
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Description</label>
                        <div class="col-md-4">
                            {{ form_widget(edit_form.descriptionAgenda,{'label_attr': {'class': 'form-control input-circle'}}) }}

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Date de creation</label>
                        <div class="col-md-4">
                            {{ form_widget(edit_form.dateCreation, {'label_attr': {'class': 'form-control input-circle'}}) }}

                        </div>
                    </div>


                </div>
                <div class="">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">

                            <button type="submit" id="Modifier agenda" class="btn red"> Modifier </button>
                            <br>
                            <br>




                        </div>
                    </div>

                    {{ form_end(edit_form) }}

                    {{ form_start(delete_form) }}


                    <div class="">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">

                                <button type="submit" id="Supprimer agenda" class="btn red"> Supprimer </button>
                                <br>
                                <br>




                            </div>
                        </div>



                    </div>


                </div>
                {{ form_end(delete_form) }}

            </div>


        </div>
    </div>
{% endblock %}


