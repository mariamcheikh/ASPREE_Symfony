{% extends 'FormationBundle:Default:index.html.twig' %}

{% block content %}
    <h1>Liste des formations</h1>
<div class="col-xs-12"><hr></div>


        {% for formation in formations %}

                <div class="timeline-body">
                    <a href="{{ path('formation_show', { 'id': formation.id }) }}" class="btn red pull-right">
                        Plus d'informations <i class="m-icon-swapright m-icon-white"></i>
                    </a>
                    <h4>Type de la formation (Titre): {{ formation.type }}</h4>

                    <div class="timeline-content">
                        {{ formation.description }}
                    </div>



                    <div class="col-xs-12"><hr></div>
        {% endfor %}




                    <div class="form-actions">

                        <button  class="btn pull-right"> <a href="{{ path('formation_new') }}">Cr√©er une formation</a> </button>
                    </div>



{% endblock %}
