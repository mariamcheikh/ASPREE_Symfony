{% extends 'AmicaleBundle:Default:index.html.twig' %}

{% block content %}

    <div class="row">
                <div class="panel-heading">
                            <div class="portlet-title">
                                <div class="caption">
                                    <i class="fa fa-gift"></i>Liste des Amicale
                                </div>

                            </div>
                        <a style="color: white" href="{{  path('amicale_new') }}"><i class="fa fa-plus">Ajouter un Amicale</i></a>

                <div class="portlet-body">
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab_1">
                            <div class="row">
                                <div class="col-md-6 col-sm-12">
                                    <div class="portlet box green">
                                    </div>
                                        <div class="portlet-title">
                                            <div class="panel-heading">
                                                        <i class=""></i>Detail Amicale
                                                    </div>

                                                    <div class="actions">

                                                        <a style="color: white" href="{{  path('amicale_edit', { 'id': amicale.id }) }}">
                                                            <i class="fa fa-pencil">Modifier</i>

                                                        </a>


                                                    </div>

                                                </div>



                                        <div class="portlet-body">
                                            <div class="row static-info">
                                                <div class="col-md-5 name"> Nom  de l'Amicale: </div>
                                                <div class="col-md-7 value"> {{ amicale.nomAmicale }}</div>

                                                <div class="col-md-5 name">   Type de l'Amicale: </div>
                                                <div class="col-md-7 value"> {{ amicale.typeAmicale }} </div>



                                                <div class="col-md-5 name"> Montant de l'Amicale: </div>
                                                <div class="col-md-7 value"> {{ amicale.montantAmicale }} </div>



                                                <div class="col-md-5 name"> Description d'Amicale: </div>
                                                <div class="col-md-7 value">{{ amicale.descriptionAmicale }}</div>

                                                <div class="col-md-5 name"> User de l'Amicale: </div>
                                                <div class="col-md-7 value">{{ amicale.user }}</div>

                                                <div class="col-md-5 name"> Image de  l'Amicale: </div>
                                                <div class="col-md-7 value"> <img src="{{ asset('images/'~ amicale.image~ '') }}" alt="" style="height: 100px;height: 100px" /></div>

                                                <td class="hidden-480">
                                                    <div class="hidden-sm hidden-xs action-buttons">
                                                        <a class="blue" href="{{path('visibiliteamicale',{'id':amicale.id}) }}">
                                                            <i class="ace-icon fa  fa-eye" style="color: black"></i>
                                                        </a>

                                                    </div>
                                                    {% if amicale.visi==1 %}

                                                        <span class="label label-sm label-success">Visible</span>
                                                    {% else %}
                                                        <span class="label label-sm label-warning">Invisible</span>
                                                    {% endif %}
                                                </td>

                                            </div>
                                        </div>
                                            </div>

                                </div>

                            </div>
                        </div>


                    </div>

                </div>

    </div>


{% endblock %}



