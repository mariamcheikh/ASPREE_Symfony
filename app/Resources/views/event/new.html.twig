{% extends 'EventsBundle:Default:layout.html.twig' %}

{% block content %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/starrating/css/rating.css') }}" />
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
    <script src="{{ asset('bundles/starrating/js/rating.js') }}"></script>
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/starrating/css/font-awesome.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/starrating/css/font-awesome.min.css') }}" />
    {{ form_start(form) }}
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>Ajout d'un evennement
            </div>
            <div class="actions">

            </div>
        </div>
        <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <div class="form-horizontal">
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-3 control-label">nom Evennement:</label>
                        <div class="col-md-4">
                            {{ form_widget(form.nomEvent, {'label_attr': {'class': 'form-control input-circle'}}) }}

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Description:</label>
                        <div class="col-md-4">
                            {{ form_widget(form.description, {'label_attr': {'class': 'form-control input-circle'}}) }}

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">date Debut:</label>
                        <div class="col-md-4">
                            {{ form_widget(form.dateDebut, {'label_attr': {'class': 'form-control input-circle'}}) }}

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">date Fin:</label>
                        <div class="col-md-4">
                            {{ form_widget(form.dateFin, {'label_attr': {'class': 'form-control input-circle'}}) }}

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Image:</label>
                        <div class="col-md-4">
                            {{ form_widget(form.image, {'label_attr': {'class': 'form-control input-circle'}}) }}

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Lieu:</label>
                        <div class="col-md-4">
                            {{ form_widget(form.lieu, {'label_attr': {'class': 'form-control input-circle'}}) }}

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label"> Agenda : </label>
                        <div class="col-md-4">
                            {{ form_widget(form.agenda, {'label_attr': {'class': 'form-control input-circle'}}) }}

                        </div>

                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Prix:</label>
                        <div class="col-md-4">
                            {{ form_widget(form.prix, {'label_attr': {'class': 'form-control input-circle'}}) }}

                        </div>
                    </div>

                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">


                            <button type="submit" id="Créer Evennement" class="btn red pull-right"> Créer Evennement </button>



                        </div>
                    </div>
                </div></div>

            <!-- END FORM-->
        </div>
    </div>
    {#<ul>#}
    {#<li>#}
    {#<a href="{{ path('event_index') }}"> Afficher la liste des evennement </a>#}
    {#</li>#}
    {#</ul>
    {{ form_widget(form, {'label_attr': {'class': 'btn btn-circle blue'}}) }}
                            {{ form_end() }}

                             <form action="#" class="form-horizontal"> </form>
    #}

    {{ form_end(form) }}
{% endblock %}
