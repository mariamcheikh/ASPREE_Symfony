                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Image</label>
                        <div class="col-md-4">
                            {{ form_widget(edit_form.image, {'label_attr': {'class': 'form-control input-circle'}}) }}

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Lieu</label>
                        <div class="col-md-4">
                            {{ form_widget(edit_form.lieu, {'label_attr': {'class': 'form-control input-circle'}}) }}

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Prix</label>
                        <div class="col-md-4">
                            {{ form_widget(edit_form.prix, {'label_attr': {'class': 'form-control input-circle'}}) }}

                        </div>
                    </div>

                </div>
                <div class="">
