                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-3 control-label">nom Evennement</label>
                        <div class="col-md-4">
                            {{ form_widget(edit_form.nomEvent,{'label_attr': {'class': 'form-control input-circle'}}) }}

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Description</label>
